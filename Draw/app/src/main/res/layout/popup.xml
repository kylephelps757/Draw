<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="#00000000"
    >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="72dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="130dp"
        android:background="#00000000"
        android:tint="@android:color/holo_purple"
        app:srcCompat="@drawable/icons8_paint_palette_50" />

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="61dp"
        android:background="#00000000"
        android:tint="@android:color/holo_purple"
        app:srcCompat="@drawable/icons8_share_50" />

    <ImageButton
        android:id="@+id/ib_erase"
        android:layout_width="79dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="333dp"
        android:background="#00000000"
        android:tint="@android:color/holo_purple"
        app:srcCompat="@drawable/icons8_erase_50_2" />

    <ImageButton
        android:id="@+id/ib_lineweight"
        android:layout_width="87dp"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="264dp"
        android:background="#00000000"
        android:tint="@android:color/holo_purple"
        app:srcCompat="@drawable/icons8_line_width_50_2" />

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="116dp"
        android:background="#00000000"
        android:tint="@android:color/holo_purple"
        app:srcCompat="@drawable/icons8_close_window_50" />
</RelativeLayout>